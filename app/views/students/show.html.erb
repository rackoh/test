<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @student.name %>
</p>

<p>
  <strong>Admission year:</strong>
  <%= @student.admission_year %>
</p>

<p>
  <strong>Active:</strong>
  <%= @student.active %>
</p>

<p>
  <strong>Classroom Name:</strong>
  <%= @student.classroom.name %>
</p>

<p>
  <strong>Classroom Code:</strong>
  <%= @student.classroom.code %>
</p>

  <div class="row">
    <div class="col-md-12 form-inline">
        <%= form_for :student, :url => edit_student_path(@student), method: :get do |f| %>
          <%= submit_tag "Edit", name: nil, :class => "btn btn-small btn-danger"%>
        <%end%>
        <%= form_for :student, :url => students_path, method: :get do |f| %>
          <%= submit_tag "Back", name: nil, :class => "btn btn-small btn-primary"%>
        <%end%>
      </div>
    </div>
  </div>