<% if @classroom.present? %>
  <% provide(:title, "Classroom #{@classroom.id}") %>
</br>
  <p id="notice"><%= notice %></p>

  <p>
    <strong> Class Name:</strong>
    <%= @classroom.name %><br>
  </p>

  <p>
    <strong>Code:</strong>
    <%= @classroom.code %><br>
  </p>

  <p>
    <strong>Active:</strong>
    <%= @classroom.active %><br>
  </p>
  <div class="row">
    <div class="col-md-6">
      <table style="width:100%">
        <thead>
          <tr>
            <th>Student Name</th>
            <th>Admission year</th>
            <th>Active</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @classroom.students.each do |student| %>
            <tr>
              <td><%= student.name %></td>
              <td><%= student.admission_year %></td>
              <td><%= student.active %></td>
              <td><%= form_for :students, :url => student_path(student), method: :get do |f| %>
                <%= f.hidden_field :id, :value => student.id %>
                <%= submit_tag "Student details", :class => "btn btn-small btn-primary"%>
              <%end%>
              <td><%= form_for :students, :url => edit_student_path(student), method: :get do |f| %>
                <%= f.hidden_field :id, :value => student.id %>
                <%= submit_tag "Edit", :class => "btn btn-small btn-danger"%>
              <%end%>
              <td><%= form_for :students, :url => { :id => student.id, :action => "destroy" }, method: :delete do |f| %>
                <%= f.hidden_field :id, :value => student.id %>
                <%= submit_tag "Delete", :class => "btn btn-small btn-danger",
                :confirm => "Do you want to remove this student permanently?"%>
              <%end%>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-12 form-inline">
      <div class="btn-group">
        <%= form_for :classroom, :url => new_student_path, method: :get do |f| %>
          <%= f.hidden_field :id, :value => @classroom.id %>
          <%= submit_tag "Add a New Student", :class => "btn btn-small btn-primary"%>
        <%end%>
        <%= form_for :classroom, :url => edit_classroom_path(@classroom), method: :get do |f| %>
          <%= f.hidden_field :id, :value => @classroom.id %>
          <%= submit_tag "Edit Class", :class => "btn btn-small btn-danger"%>
        <%end%>
        <%= form_for :classroom, :url => classrooms_path, method: :get do |f| %>
          <%= f.hidden_field :id, :value => @classroom.id %>
          <%= submit_tag "Back", :class => "btn btn-small btn-primary"%>
        <%end%>
      </div>
    </div>
  </div>
<%end%>