<% provide(:title, "New Classroom") %>
<h1>New Classroom</h1>
<div class="row">
  <div class="col-md-6">
    <%= form_for(@classroom) do |f| %>
      <%= f.label "Class Name" %>
      <%= f.text_field :name %><br>

      <%= f.label "Code" %>
      <%= f.text_field :code %><br>

      <%= f.label "Active" %>
      <%= f.check_box :active %><br>

      <%= f.submit "Create class", class: "btn btn-primary" %><br>
    <% end %>
  </div>
</div>
<%= link_to 'Back', classrooms_path %>